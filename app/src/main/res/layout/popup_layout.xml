<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- won game -->
        <ImageView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"
            android:id="@+id/popWonMenuBackground"
            android:contentDescription="background"
            android:background="@drawable/round_popout"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="Close"
        android:id="@+id/closeButton"
        android:textSize="12sp"
        android:layout_alignRight="@+id/popWonMenuBackground"
        android:layout_alignEnd="@+id/popWonMenuBackground"
        android:layout_alignTop="@+id/popWonMenuBackground"
        android:textColor="@color/text_states"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blox"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/popWonMenuBackground"
        android:layout_margin="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/blox_view"
            android:background="@drawable/round_rect_shape"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/flamosymbol"
            android:id="@+id/blox_symbol"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/tutorial_title_text"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_below="@+id/closeButton"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:id="@+id/howToText"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/tutorialDesc"
            android:layout_below="@id/howToText"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="@string/tutorial_text"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            />
</RelativeLayout>